<catalog xmlns="http://iptc.org/std/nar/2006-10-01/" additionalInfo="http://www.iptc.org/goto?G2cataloginfo">
	<scheme alias="advice-lifetime" uri="http://cv.iptc.org/newscodes/advice-lifetime/" modified="2018-08-24T12:20:00+00:00">
		<name xml:lang="en-GB">Lifetime Advice</name>
		<definition xml:lang="en-GB">Advice regarding the length of time that the content is considered to be relevant.</definition>
		<note xml:lang="en-GB">This vocabulary is currently experimental and is subject to change. </note>
	</scheme>
	<scheme alias="advice-importance" uri="http://cv.iptc.org/newscodes/advice-importance/" modified="2018-07-19T12:00:00+00:00">
		<name xml:lang="en-GB">Importance Advice</name>
		<definition xml:lang="en-GB">Advice regarding the importance of a story from an emotional perspective.</definition>
		<note xml:lang="en-GB">This vocabulary is currently experimental and is subject to change. </note>
	</scheme>
</catalog>
